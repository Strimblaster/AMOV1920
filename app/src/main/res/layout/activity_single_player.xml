<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/flSudoku"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/n1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/n2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flSudoku" />

    <Button
        android:id="@+id/n2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintEnd_toStartOf="@+id/n3"
        app:layout_constraintStart_toEndOf="@+id/n1"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <Button
        android:id="@+id/n3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n2"
        app:layout_constraintEnd_toStartOf="@+id/n4"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <Button
        android:id="@+id/n4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n3"
        app:layout_constraintEnd_toStartOf="@+id/n5"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <Button
        android:id="@+id/n5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n4"
        app:layout_constraintEnd_toStartOf="@+id/n6"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <Button
        android:id="@+id/n6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n5"
        app:layout_constraintEnd_toStartOf="@+id/n7"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <Button
        android:id="@+id/n7"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n6"
        app:layout_constraintEnd_toStartOf="@+id/n8"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <Button
        android:id="@+id/n8"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n7"
        app:layout_constraintEnd_toStartOf="@+id/n9"
        app:layout_constraintTop_toTopOf="@+id/n1"/>

    <Button
        android:id="@+id/n9"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@+id/n1"
        app:layout_constraintStart_toEndOf="@+id/n8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/n1" />

    <TextView
        android:id="@+id/pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="Pontos:"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:text="Tempo:"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lbTime" />

    <TextView
        android:id="@+id/lbPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:text="123"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pontos" />

    <TextView
        android:id="@+id/lbTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="1:23"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>