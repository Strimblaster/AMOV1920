<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sudoku">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".M3_MultiplayerLan.LanClient"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />
        <activity android:name=".M3_MultiplayerLan.LanServer"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait" />
        <activity android:name=".Historico"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".camera"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".M3_MultiplayerLan.LanChoose"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".DifficultyView"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Result"
            android:label="Resultado"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".M2_MultiPlayerLocal.Multiplayer"
            android:label="@string/title_activity_multiplayer"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".M1_SinglePlayer.SinglePlayer"
            android:label="@string/title_activity_single_player"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Jogar"
            android:label="@string/title_activity_jogar"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>