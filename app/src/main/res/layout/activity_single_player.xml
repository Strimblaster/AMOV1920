<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".SinglePlayer">

    <LinearLayout
        android:id="@+id/TopMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/flSudoku"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:animateLayoutChanges="true">

        <Button
            android:id="@+id/newGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorSinglePlayer"
            android:fontFamily="@font/roboto"
            android:text="Novo Jogo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackgroundLight"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Pontuação:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackgroundLight"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="123"
            android:textAlignment="center"
            android:textColor="@color/colorSinglePlayer"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackgroundLight"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Tempo: "
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorBackgroundLight"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="20:21"
            android:textAlignment="center"
            android:textColor="@color/colorSinglePlayer"
            android:textSize="20sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/flSudoku"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Numbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopMenu">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/Numbers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:animateLayoutChanges="true">

        <Button
            android:id="@+id/n1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:text="1"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n2"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="2"
            android:textSize="25sp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/n3"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="3"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n4"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="4"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n5"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="5"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n6"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="6"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n7"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="7"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n8"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="8"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/n9"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:fontFamily="@font/roboto"
            android:text="9"
            android:textSize="25sp"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>